<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/card_prof"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/profile_top_root"
        android:layout_width="match_parent"
        android:background="@drawable/side_nav_bar"
        android:layout_height="200dp"></FrameLayout>


    <android.support.v7.widget.CardView
        app:layout_anchor="@id/profile_top_root"
        app:layout_anchorGravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_name"
                android:text="Rohit Savant"
                android:textColor="@color/jain_green"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/profile_mobile"
                android:layout_marginTop="5dp"
                android:text="8805250944"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/profile_email"
                android:text="savantrohit8@gmail.com"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>
    <Button
        android:id="@+id/btn_logout"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:text="Logout"
        android:layout_below="@+id/card_prof"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>