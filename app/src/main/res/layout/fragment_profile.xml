<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/card_prof"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        app:layout_anchor="@id/card_prof_top"
        android:elevation="5dp"
        app:layout_anchorGravity="top|center"
        android:layout_width="120dp"
        android:layout_height="110dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prof_image"
            android:src="@drawable/logo"
            android:layout_width="110dp"
            android:layout_margin="1dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/edit_prof_img"
            android:foreground="?attr/selectableItemBackground"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_create_color"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/profile_top_root"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp"></ImageView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_prof_top"
        app:layout_anchor="@id/profile_top_root"
        app:layout_anchorGravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_marginTop="45dp"
                android:id="@+id/profile_name"
                android:text="Rohit Savant"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/profile_mobile"
                android:layout_marginTop="5dp"
                android:text="8805250944"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/profile_email"
                android:text="savantrohit8@gmail.com"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/card_prof"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/profile_city"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@drawable/custom_et_form"
                    android:hint="City"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:height="32dp"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/profile_state"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@drawable/custom_et_form"
                    android:hint="State"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:height="32dp"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/profile_pincode"
                    android:background="@drawable/custom_et_form"
                    android:hint="Pincode"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:height="32dp"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/profile_address"
                    android:background="@drawable/custom_et_form"
                    android:hint="Detailed address"
                    android:maxLines="5"
                    android:minLines="5"
                    android:gravity="top"
                    android:textColor="@android:color/black"
                    android:height="32dp"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_et_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/black"
                        android:text="Date of Birth: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btn_dob"
                        android:layout_marginLeft="10dp"
                        android:text="26/06/1990"
                        android:fontFamily="monospace"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rad_grp_gender"
                    android:background="@drawable/custom_et_form"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:hint="State"
                    android:height="32dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp">

                    <RadioButton
                        android:id="@+id/rad_male"
                        android:text="Male"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/rad_female"
                        android:layout_margin="2dp"
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>
            </LinearLayout>
        </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/profile_update"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@+id/card_profile"
        android:layout_centerHorizontal="true"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/custom_bt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <Button
        android:layout_below="@+id/profile_update"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/btn_logout"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
    </ScrollView>