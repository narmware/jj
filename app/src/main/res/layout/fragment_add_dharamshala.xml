<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <EditText
        android:id="@+id/edt_name"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="Name"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/form_edt_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Select Type"
            android:textSize="16sp"
            android:textColor="@color/grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_et_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinn_type"
                android:padding="10dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_contact_person"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="Contact Person Name"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_mail"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_et_form"
        android:hint="Email"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_mobile"
        android:maxLength="10"
        android:inputType="phone"
        android:digits="1234567890"
        android:background="@drawable/custom_et_form"
        android:hint="Mobile Number"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_phone"
        android:maxLength="10"
        android:inputType="phone"
        android:digits="1234567890"
        android:background="@drawable/custom_et_form"
        android:hint="Phone Number"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_state"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="State"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_city"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="City"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_pincode"
        android:inputType="number"
        android:digits="1234567890"
        android:background="@drawable/custom_et_form"
        android:hint="Pincode"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/form_edt_margin"/>

    <EditText
        android:id="@+id/edt_address"
        android:background="@drawable/custom_et_form"
        android:hint="Detailed address"
        android:maxLines="5"
        android:minLines="5"
        android:gravity="top"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/form_edt_margin"/>


    <android.support.v7.widget.CardView
        android:id="@+id/card_dharam_facility"
        android:visibility="gone"
        android:layout_marginTop="@dimen/form_edt_margin"
        android:layout_marginBottom="@dimen/form_edt_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Select Dharamshala Facilities"
            android:textSize="16sp"
            android:textColor="@color/grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_facilities"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_bhojan_facility"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/form_edt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Select Bhojanalay Facilities"
            android:textSize="16sp"
            android:textColor="@color/grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_bhojan_facilities"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_submit_form"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/form_edt_margin"
        android:background="@drawable/custom_bt"
        android:layout_gravity="center"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
</LinearLayout>

</android.support.v4.widget.NestedScrollView>