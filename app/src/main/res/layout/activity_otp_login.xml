<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="lsoft.co.ghodawatlearningapp.activity.SignUpActivity">

        <RelativeLayout
            android:id="@+id/backround_relative"
            android:background="@drawable/jain_sculptures"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <LinearLayout
                android:id="@+id/si_logo"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/jj_logo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />

                <!--  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/white"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:text="DoorMojo"/>-->

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="125dp"
            app:layout_anchorGravity="bottom|end"
            app:layout_anchor="@id/backround_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/login_card"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="30dp">

                    <LinearLayout
                        android:id="@+id/signin_root_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_inp_mob"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp">
                            <EditText
                                android:id="@+id/edt_name"
                                android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:fontFamily="sans-serif-condensed"
                                android:hint="Enter your name"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_inp_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp">
                            <EditText
                                android:id="@+id/edt_mail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:fontFamily="sans-serif-condensed"
                                android:hint="Enter Email"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_inp_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp">
                            <EditText
                                android:id="@+id/edt_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="10"
                                android:digits="0123456789"
                                android:inputType="number"
                                android:fontFamily="sans-serif-condensed"
                                android:hint="Enter Mobile Number"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:visibility="gone"
                            android:id="@+id/txt_inp_otp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp">
                            <EditText
                                android:id="@+id/edt_login_otp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number|phone"
                                android:fontFamily="sans-serif-condensed"
                                android:digits="0123456789"
                                android:maxLength="10"
                                android:hint="Enter otp"/>
                        </android.support.design.widget.TextInputLayout>


                        <Button
                            android:id="@+id/btn_signin"
                            android:layout_marginTop="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/white"
                            android:background="@drawable/button_offer"
                            android:text="Sign in"/>
                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/otp_card"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">

           <EditText
               android:id="@+id/edt_otp"
               android:hint="Enter OTP here"
               android:maxLength="4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/edt_otp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_submit_otp"
                android:minHeight="1dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:text="Submit"/>

            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_resend"
                android:layout_marginTop="10dp"
                android:minHeight="1dp"
                android:padding="6dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Resend OTP"/>
            </LinearLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>