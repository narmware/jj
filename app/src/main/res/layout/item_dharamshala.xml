<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">



    <android.support.v7.widget.CardView
        android:id="@+id/hotel_data_root"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:minHeight="120dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/hotel_item_call"
                android:background="@color/grey_200"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_phone_landline"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/hotel_item_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vishwa Lad Sanatorium"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="New Tungarali Road, Opp Girivihar Hotel, Lonavala - 410401 "/>

                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/red_600"
                    android:text="Rooms availabe from 300 onwards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:layout_anchorGravity="left|center"
        app:layout_anchor="@id/hotel_data_root"
        android:layout_width="110dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="110dp">

        <FrameLayout
            android:background="@color/grey_200"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:padding="2dp"
            android:src="@drawable/hotel"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </FrameLayout>
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>