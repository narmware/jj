<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.narmware.jainjeevan.fragments.AddVendorFragment">


    <EditText
        android:id="@+id/edt_name"
        android:inputType="text"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="Business name/ Owner name"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_contact_person"
        android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="Contact person name"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:singleLine="true"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_mobile"
        android:inputType="phone"
        android:digits="1234567890"
        android:maxLength="10"
        android:background="@drawable/custom_et_form"
        android:hint="Contact number"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_prod_name"
        android:visibility="gone"
        android:background="@drawable/custom_et_form"
        android:hint="Product name"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/edt_mail"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_et_form"
        android:hint="Email"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/edt_city"
        android:visibility="gone"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@drawable/custom_et_form"
        android:hint="City"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/lin_city"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Select City"
            android:textSize="16sp"
            android:textColor="@color/grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinn_city"
            android:layout_width="220dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Select Area"
            android:textSize="16sp"
            android:textColor="@color/grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinn_area"
            android:layout_width="220dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_pincode"
        android:inputType="number"
        android:digits="1234567890"
        android:background="@drawable/custom_et_form"
        android:hint="Pincode"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edt_address"
        android:background="@drawable/custom_et_form"
        android:hint="Detailed address"
        android:maxLines="5"
        android:minLines="5"
        android:gravity="top"
        android:textColor="@android:color/black"
        android:height="32dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chk_del_avail"
                android:textSize="16sp"
                android:text="Delivery available upto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_km"
                android:enabled="false"
                android:inputType="number"
                android:digits="1234567890"
                android:background="@drawable/custom_et_form"
                android:hint="0"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:height="28dp"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="100dp"
                android:layout_height="40dp"
               />

            <TextView
                android:text="Km."
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_food_type"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Select food item type"
                android:textSize="16sp"
                android:textColor="@color/grey_900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_food_type"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/edt_special_food"
        android:background="@drawable/custom_et_form"
        android:hint="Specify your speciality food items"
        android:maxLines="5"
        android:minLines="5"
        android:gravity="top"
        android:textColor="@android:color/black"
        android:height="20dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:text="Jain cakes should be served within 24 hrs."
        android:padding="5dp"
        android:textColor="@color/amber_700"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_submit_form"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_bt"
        android:layout_gravity="center"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>