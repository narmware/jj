<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="10dp">



    <android.support.v7.widget.CardView
        android:id="@+id/hotel_data_root"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:minHeight="120dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:padding="5dp">

            <ImageButton
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btn_call"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_phone_landline"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vishwa Lad Sanatorium"/>

                <TextView
                    android:id="@+id/txt_contact"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"/>

                <Button
                    android:id="@+id/btn_view_menu"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/red_600"
                    android:text="View Menu"
                    android:background="@drawable/custom_bt_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:layout_anchorGravity="left|center"
        app:layout_anchor="@id/hotel_data_root"
        android:layout_width="110dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/img_hotel"
            android:src="@drawable/hotel"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>